<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:outlineSpotShadowColor="@color/transparent"
            app:cardCornerRadius="500dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_model" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_headLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tv_time"
            android:layout_toEndOf="@id/card"
            android:ellipsize="end"
            android:fontFamily="@font/gilroy_bold"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:text="Pinky Arora is available " />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/gilroy_regular"

            android:maxLines="1"
            android:textColor="@color/gray_light"
            android:textSize="13sp"
            tools:text="5 min" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_headLine"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/card"
            android:ellipsize="end"
            android:fontFamily="@font/gilroy_regular"
            android:maxLines="2"
            android:textColor="@color/gray"
            android:textSize="15sp"
            tools:text="Pinkey Arora is available to take calls and
chat, message her and have fun her and have fun" />

    </RelativeLayout>
</layout>