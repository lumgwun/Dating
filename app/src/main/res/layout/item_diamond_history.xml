<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bg_cornered_rect_10"
        android:backgroundTint="@color/bg_chats"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/img_dimond" />


            <TextView
                android:id="@+id/tv_diamond_count"
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/gilroy_semi_bold"

                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="1500" />

            <TextView
                android:id="@+id/tv_type_diamond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rect6h"
                android:backgroundTint="@color/gray_10"
                android:ellipsize="end"
                android:fontFamily="@font/gilroy_bold"
                android:letterSpacing="0.08"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="7dp"
                android:textColor="@color/red_brown_dark"
                android:textSize="13sp"
                tools:text="LIVESTREAM" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_Date_Diamond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:ellipsize="end"
            android:fontFamily="@font/gilroy_regular"

            android:textColor="@color/gray"
            android:textSize="15sp"
            tools:text=" 5 Sep 2021" />

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>
