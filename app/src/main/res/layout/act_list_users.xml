    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lahoriagency.cikolive.ListUsersActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
