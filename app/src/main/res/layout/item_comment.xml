<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="300dp"


        android:layout_height="wrap_content"

        android:layout_marginVertical="2dp"
        android:background="@drawable/bg_cornered_rect_5"

        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:outlineSpotShadowColor="@color/transparent"
            app:cardCornerRadius="500dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_model" />


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toEndOf="@id/card"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/gilroy_semi_bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/white_70"
                    android:textSize="14sp"
                    tools:text="Mimi Brown" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/gilroy_semi_bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/desh"
                    android:textColor="@color/white_70"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_palce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ellipsize="end"
                    android:fontFamily="@font/gilroy_semi_bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/white_70"
                    android:textSize="14sp"
                    tools:text="Dubai" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lout_name"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@id/card"
                android:ellipsize="end"
                android:fontFamily="@font/gilroy_semi_bold"
                android:textColor="@color/white_90"
                android:textSize="15sp"
                android:visibility="gone"
                tools:text="This teacher is so so amazing,
her eyes are little scary ðŸ˜’" />


            <ImageView

                android:id="@+id/img_gift"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_below="@id/tv_comment"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_cornered_rect_15"
                android:backgroundTint="@color/black_40"
                android:padding="10dp"
                android:src="@drawable/img_2hearts"
                android:visibility="gone" />
        </LinearLayout>


    </RelativeLayout>
</layout>