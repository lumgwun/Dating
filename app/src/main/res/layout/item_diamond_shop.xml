<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bg_cornered_rect_10"
        android:backgroundTint="@color/white_20"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/image_diamond_2" />


            <TextView
                android:id="@+id/CountD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/gilroy_regular"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="1500 Diamonds" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_price"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_gradiant_500"
                android:fontFamily="@font/gilroy_semi_bold"
                android:textAllCaps="false"
                android:textColor="@color/red_brown_dark"
                android:textSize="16sp"
                tools:text="$5" />


        </LinearLayout>

    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>