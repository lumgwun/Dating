<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:id="@+id/payT1"
        android:gravity="center_horizontal"
        android:text="Client ID:98765"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="Our Exchange Rate is USD1=NGN550"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/pay5Button"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:onClick="fiveDiamond"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rect6d"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Pay for 5 Diamonds"/>

    <Button
        android:id="@+id/pay10Button"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:onClick="tenDiamond"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rect6d"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Pay for 10 Diamonds"/>

    <Button
        android:id="@+id/payButton100"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:onClick="hundredDiamond"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rect6d"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Pay for 100 Diamonds"/>

    <Button
        android:id="@+id/payButton"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:onClick="customAmt"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rect6d"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Input Amount using our Exchange Rate"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/gFAB"
        android:layout_gravity="right"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>