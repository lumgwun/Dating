<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:background="@drawable/bg_cornered_rect_10"
        android:backgroundTint="@color/bg_chats"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:orientation="horizontal"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_rq_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/gilroy_semi_bold"

                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="RED45HJP89" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_cornered_rect_500"
                    android:backgroundTint="@color/green_22"
                    android:ellipsize="end"
                    android:fontFamily="@font/gilroy_semi_bold"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="7dp"
                    android:text="@string/processing"
                    android:textColor="@color/green"
                    android:textSize="13sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:ellipsize="end"
                android:fontFamily="@font/gilroy_regular"

                android:textColor="@color/gray"
                android:textSize="15sp"
                tools:text=" 5 Sep 2021" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/gilroy_regular"

                android:text="@string/diamonds_"
                android:textColor="@color/gray_light"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_diamond_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:ellipsize="end"
                android:fontFamily="@font/gilroy_semi_bold"

                android:textColor="@color/gray"
                android:textSize="15sp"
                tools:text="50236" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lou_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/gilroy_regular"

                android:text="@string/amount_paid"
                android:textColor="@color/gray_light"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:ellipsize="end"
                android:fontFamily="@font/gilroy_semi_bold"

                android:textColor="@color/gray"
                android:textSize="15sp"
                tools:text="$250" />


        </LinearLayout>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>