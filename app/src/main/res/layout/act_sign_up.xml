<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lahoriagency.cikolive.NewPackage.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_login"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:background="@drawable/rect6h"
            android:layout_marginBottom="10dp"
            android:layout_height="170dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:stateListAnimator="@animator/nav_default_pop_enter_anim"
                app:civ_border_width="1dp"
                app:civ_border_color="#ffffff"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_p"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="SelectPix"
                android:src="@drawable/ic_admin_user"
                android:layout_gravity="center"
                android:padding="5dp"
                android:stateListAnimator="@animator/nav_default_pop_enter_anim"
                app:civ_border_width="1dp"
                app:civ_border_color="#ffffff"/>


        </com.google.android.material.appbar.AppBarLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_layer_1a"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/signup_editLogin"
                android:hint="Enter username"
                android:padding="30dp"
                android:gravity="center_horizontal"
                android:background="@drawable/rect6d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/signup_editFullName"
                android:hint="Enter full name"
                android:padding="30dp"
                android:gravity="center_horizontal"
                android:background="@drawable/rect6g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/signup_editPassword"
                android:hint="Enter password"
                android:layout_width="match_parent"
                android:padding="30dp"
                android:gravity="center_horizontal"
                android:background="@drawable/rect6d"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:layout_weight="1"
            android:thicknessRatio="1.9"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sign up"
                android:padding="20dp"
                android:background="@drawable/rect6h"
                android:id="@+id/signup_btnLogin"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:layout_weight="1"
            android:thicknessRatio="1.9"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:padding="20dp"
                android:background="@drawable/rect6h"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:id="@+id/signup_btnCancel"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>