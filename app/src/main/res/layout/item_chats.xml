<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="840dp"
    android:orientation="vertical"
    android:background="@drawable/rect_white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:background="@drawable/rect6d"
        android:orientation="horizontal"
        android:padding="30dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:outlineSpotShadowColor="@color/transparent"
            app:cardCornerRadius="500dp">

            <ImageView
                android:id="@+id/img_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_model" />


        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:layout_toStartOf="@id/tv_chat_time"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_chat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:ellipsize="end"
                    android:fontFamily="@font/gilroy_bold"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    tools:text="MIMI" />

                <TextView
                    android:id="@+id/tv_chat_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/gilroy_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    tools:text="24" />

                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="7dp"
                    android:src="@drawable/ic_official" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_chat_massage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lout_name"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@id/img_new_chat_massage"
                android:ellipsize="end"
                android:fontFamily="@font/gilroy_regular"
                android:maxLines="3"
                android:textColor="@color/gray"
                android:textSize="14sp"
                tools:text="Pinkey Arora is available to take calls and
chat, message her and have fun her and have fun" />


            <TextView
                android:id="@+id/tv_chat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:ellipsize="end"
                android:fontFamily="@font/gilroy_regular"

                android:maxLines="1"
                android:textColor="@color/gray_light"
                android:textSize="12sp"
                tools:text="5 min" />

            <ImageView
                android:id="@+id/img_new_chat_massage"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/bg_gradiant_500"
                tools:ignore="RtlHardcoded" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


        </LinearLayout>


    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>